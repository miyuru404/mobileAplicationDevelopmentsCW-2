<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FutureWork"
        tools:targetApi="31">
        <activity
            android:name=".SerchForAllMovies"
            android:exported="false"
            android:label="@string/title_activity_serch_for_all_movies"
            android:theme="@style/Theme.FutureWork" />
        <activity
            android:name=".SearchForActor"
            android:exported="false"
            android:label="@string/title_activity_search_for_actor"
            android:theme="@style/Theme.FutureWork" />
        <activity
            android:name=".SearchForMovies"
            android:exported="false"
            android:label="@string/title_activity_search_for_movies"
            android:theme="@style/Theme.FutureWork" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FutureWork">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>